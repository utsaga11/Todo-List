<html>

<head>
    <title>
        <%= title %>
    </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1" id="title">Todo-List</span>
        </div>
    </nav>
    <hr>
    <div id="des-cont">
        <div class="navbar navbar-light " id="des">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1" id="des-tit">DESCRIPTION</span>
            </div>
        </div>
        <input type="text" name="description" placeholder="What do you need to do?" required id="des-inp">
    </div>
    <hr>
    
        <div id="cat-cont">
            <nav class="navbar navbar-light ">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1" id="des-tit">CATEGORY</span>
                </div>
            </nav>
            <input type="text" name="category" placeholder="Choose a category" required id="cat-inp">
            <div class="dropdown" id="drop">
                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Select
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="#">Personal</a></li>
                    <li><a class="dropdown-item" href="#">College</a></li>
                    <li><a class="dropdown-item" href="#">Work</a></li>
                    <li><a class="dropdown-item" href="#">Other</a></li>
                </ul>
            </div>

        </div>


        <div id="date-cont">
            <nav class="navbar navbar-light ">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1" id="des-tit">DUE DATE</span>
                </div>
            </nav>
            <input type="date" name="category" placeholder="dd/mm/yyyy" required id="date-inp">
        </div>
        
        
    



    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>